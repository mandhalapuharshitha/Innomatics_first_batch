    <title>Memory Match Game</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: LightGoldenrod;
        }
        .container {
            max-width: 800px;
            margin: 40px auto;
            text-align: center;
        }
        .card {
            width: 100px;
            height: 100px;
            border: 1px solid LightCoral;
            border-radius: 10px;
            background-color: PastelPink;
            display: inline-block;
            margin: 10px;
            position: relative;
            transition: background-color 0.5s;
        }
        .card.flipped {
            background-color: SkyBlue;
        }
        .card.matched {
            background-color: LimeGreen;
        }
        .scoreboard {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: BlueGreen;
        }
        .timer {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            color: Orange;
        }
        .jumbo {
            background-color: LightGray;
            padding: 20px;
            border: 1px solid LightGray;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        #start-fruits, #start-emojis, #start-animals, #start-planets, #start-flags {
            background-color: Teal;
            color: White;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        #start-fruits:hover, #start-emojis:hover, #start-animals:hover, #start-planets:hover, #start-flags:hover {
            background-color: ForestGreen;
        }
    </style>
